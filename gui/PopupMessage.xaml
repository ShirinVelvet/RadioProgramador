<Window x:Class="RadioProgramador.gui.PopupMessage"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:RadioProgramador.gui"
		mc:Ignorable="d"
		Title="DarkMessageBox" Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" Background="#FF121212" BorderBrush="#FF707070" BorderThickness="1">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="28"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="48"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Rectangle Fill="#FF1F1F1F" Height="28" VerticalAlignment="Top" MouseDown="Ventana_mover"/>
		<TextBlock x:Name="tb_titulo" Margin="0,4,0,0" TextWrapping="Wrap" Text="Titulo" VerticalAlignment="Top" Foreground="White" TextAlignment="Center" FontSize="14" MouseDown="Ventana_mover"/>
		<Label x:Name="label_icono" Content="&#xE783;" HorizontalAlignment="Left" Margin="25,0,0,0" Grid.Row="1" VerticalAlignment="Center" Foreground="White" FontSize="50" FontFamily="Segoe MDL2 Assets"/>
		<TextBlock x:Name="tb_contenido" HorizontalAlignment="Left" Margin="110,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Contenido" VerticalAlignment="Center" Foreground="White" Width="265" FontSize="14"/>
		<DockPanel x:Name="dock_botones" HorizontalAlignment="Left" Height="48" LastChildFill="False" Margin="0,122,0,0" Grid.Row="1" VerticalAlignment="Top" Width="380" Grid.RowSpan="2">
			<Button x:Name="button_no" Content="No" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Style="{DynamicResource ButtonGeneric}" Foreground="White" Background="#FF3A3A3A" DockPanel.Dock="Right" Margin="6,4,6,0" Visibility="Collapsed" Click="Cancelar" BorderBrush="{x:Null}" FontSize="14" Padding="8,4,8,6"/>
			<Button x:Name="button_si" Content="Sí" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Style="{DynamicResource ButtonGeneric}" Foreground="White" Background="#FF3A3A3A" DockPanel.Dock="Right" Margin="6,4,6,0" Visibility="Collapsed" Click="Aceptar" BorderBrush="{x:Null}" FontSize="14" Padding="8,4,8,6"/>
			<Button x:Name="button_cancelar" Content="Cancelar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Style="{DynamicResource ButtonGeneric}" Foreground="White" Background="#FF3A3A3A" DockPanel.Dock="Right" Margin="6,4,6,0" Click="Cancelar" BorderBrush="{x:Null}" FontSize="14" Padding="8,4,8,6" Visibility="Collapsed"/>
			<Button x:Name="button_aceptar" Content="Aceptar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Style="{DynamicResource ButtonGeneric}" Foreground="White" Background="#FF3A3A3A" DockPanel.Dock="Right" Margin="6,4,6,0" Click="Aceptar" BorderBrush="{x:Null}" FontSize="14" Padding="8,4,8,6" Visibility="Collapsed"/>
		</DockPanel>

	</Grid>
</Window>
