<Window x:Class="RadioProgramador.gui.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:RadioProgramador.gui"
		mc:Ignorable="d"
		Title="MainWindow"
		WindowStyle="None" WindowStartupLocation="CenterScreen"
		ResizeMode="NoResize" Background="#FF222222"
		MaxWidth="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width}"
		MaxHeight="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}" Loaded="VentanaCargada" Width="1536" Height="824"
		>
	<WindowChrome.WindowChrome>
		<WindowChrome CaptionHeight="0" ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}" />
	</WindowChrome.WindowChrome>
	<Grid x:Name="grid_main">
		<Grid.RowDefinitions>
			<RowDefinition Height="28"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="26"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid Grid.Row="0" Grid.Column="0" Background="#FF1B1B1B" MouseDown="Ventana_mover">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Button Content="&#xE8BB;" HorizontalAlignment="Left" Margin="82.2,0,0,0" VerticalAlignment="Top" Width="41" Height="28" Background="#FF1B1B1B" BorderBrush="{x:Null}" Foreground="White" FontFamily="Segoe MDL2 Assets" Style="{DynamicResource ButtonClose}" Click="Cerrar_click" Grid.Column="2" />
			<Button Content="&#xE923;" HorizontalAlignment="Left" Margin="41.2,0,0,0" VerticalAlignment="Top" Width="41" Height="28" Background="#FF1B1B1B" BorderBrush="{x:Null}" Foreground="White" FontFamily="Segoe MDL2 Assets" Style="{DynamicResource ButtonMaximize}" Click="Restaurar_click" Grid.Column="2"/>
			<Button Content="&#xE921;" HorizontalAlignment="Left" Margin="0.2,0,0,0" VerticalAlignment="Top" Width="41" Height="28" Background="#FF1B1B1B" BorderBrush="{x:Null}" Foreground="White" FontFamily="Segoe MDL2 Assets" Style="{DynamicResource ButtonMaximize}" Click="Minimizar_click" Grid.Column="2"/>
			<TextBlock TextWrapping="Wrap" Text="Radio Programador" Foreground="White" FontSize="14" Grid.Column="1" TextAlignment="Center" Margin="0,4,0,0"/>
			<Image HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="28" Grid.Column="0"/>
		</Grid>
		<Grid Grid.Row="2" Grid.Column="0" Background="#FF1B1B1B"/>
		<Button Content="Probar DarkMessageBox" HorizontalAlignment="Left" Margin="690,367,0,0" Grid.Row="1" VerticalAlignment="Top" Width="160" Style="{DynamicResource ButtonGeneric}" Click="Messagebox_click" Foreground="White" Background="#FF3A3A3A" Height="25"/>
	</Grid>
</Window>
